{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Task</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name_task</th>
                <td>{{ entity.nametask }}</td>
            </tr>
            <tr>
                <th>Begin_task</th>
                <td>{{ entity.begintask|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>End_task</th>
                <td>{{ entity.endtask|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Vajnoct</th>
                <td>{{ entity.vajnoct }}</td>
            </tr>
            <tr>
                <th>Final</th>
                <td>{{ entity.final }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('task') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('task_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
