{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Subtask list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Subtask</th>
                <th>Begin</th>
                <th>End</th>
                <th>Percent</th>
                <th>Final</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('subtask_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.Subtask }}</td>
                <td>{% if entity.begin %}{{ entity.begin|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.end %}{{ entity.end|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.percent }}</td>
                <td>{{ entity.final }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('subtask_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('subtask_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('subtask_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
